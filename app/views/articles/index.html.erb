<p style="color: green"><%= notice %></p>

<h1>Articles</h1>

<div id="articles">
    <table>
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
			<% @articles.each do |article| %>
				<tr>
					<td><%= article.title %>&nbsp;&nbsp;</td>
					<td><%= article.description %>&nbsp;&nbsp;</td>
					<td>Placeholder</td>
				</tr>
			<% end %>
        </tbody>
    </table>
</div>